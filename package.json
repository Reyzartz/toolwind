{
	"name": "toolwind",
	"displayName": "Toolwind - Devtool for Tailwind css",
	"description": "Enhance Tailwind CSS workflow: Easily add, modify, remove, and copy classes with built-in Tailwind IntelliSense",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build --minify --outDir build && zip -r build.zip build",
		"preview": "vite preview",
		"lint": "eslint ."
	},
	"keywords": [
		"tailwind",
		"tailwindcss",
		"devtool"
	],
	"dependencies": {
		"@codemirror/lang-css": "^6.2.1",
		"@codemirror/lang-json": "^6.0.1",
		"@codemirror/lint": "^6.2.2",
		"@floating-ui/react": "^0.25.3",
		"@headlessui/react": "^1.7.16",
		"@uiw/codemirror-theme-dracula": "^4.21.11",
		"@uiw/react-codemirror": "^4.21.2",
		"clsx": "^2.0.0",
		"downshift": "^8.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-use": "^17.4.0",
		"recoil": "^0.7.7",
		"tailwindcss-autocomplete": "^0.5.3"
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^2.0.0-beta.12",
		"@popperjs/core": "^2.11.6",
		"@types/chrome": "^0.0.213",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"@types/webextension-polyfill": "^0.10.0",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@vitejs/plugin-react": "^4.0.1",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard-with-typescript": "^37.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react": "^7.33.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postcss": "^8.4.24",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"tailwindcss": "^3.3.2",
		"ts-node": "^10.9.1",
		"typescript": "*",
		"vite": "4.1.0",
		"webextension-polyfill": "^0.10.0"
	}
}
