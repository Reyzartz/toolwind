{
  "name": "Toolwind",
  "version": "0.0.1",
  "description": "tailwind editor extension for browsers",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/libs/popper-min.js",
        "content_script.js"
      ]
    }
  ],
  "icons": {
    "16": "assets/logo-16.png",
    "32": "assets/logo-32.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/styles/index.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/logo-16.png",
      "24": "assets/logo-24.png",
      "32": "assets/logo-32.png"
    },
    "default_title": "Toolwind the tailwind devtool for browsers",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
